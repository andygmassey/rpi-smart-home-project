[Unit]
Description=Network Monitor (Fing Alternative)
Requires=docker.service
After=docker.service
After=hassio-supervisor.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/massey/fing-agent-docker
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
User=massey
Group=massey

[Install]
WantedBy=multi-user.target
